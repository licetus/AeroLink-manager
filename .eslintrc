{
  "root": true,
  "parser": "babel-eslint",
  "extends": ["vue", "airbnb"],
  "globals": {
    "__DEV__": true,
    "db": true
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "no-confusing-arrow": 0,
    "semi": [2, "never"],
    "global-require": 0,
    "indent": ["error", "tab"],
    "no-tabs": "off"
  }
}
